<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_authentication"
    tools:context="mo.ed.prof.yusor.Activities.CompleteAddBookActivity">
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="@string/Book_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/radioBookStatusGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/Radio_new"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/_new"
                android:checked="true" />
            <RadioButton
                android:id="@+id/Radio_intermediate"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/Intermediate"
                android:checked="true" />
            <RadioButton
                android:id="@+id/Radio_notbad"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/not_bad"
                android:checked="true" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="@string/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/radioTransactionGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/Radio_Sale"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/sale"
                android:checked="true" />
            <RadioButton
                android:id="@+id/Radio_exchange"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/exchange"
                android:checked="true" />
            <RadioButton
                android:id="@+id/Radio_gift"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="@string/gift"
                android:checked="true" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/button_shape"
            style="@style/ButtonText"
            android:text="@string/btn_check"
            android:id="@+id/Check_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Edit_BookPrice"
            android:textColor="@color/yellow"
            android:hint="@string/book_price"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"  />
        <TextView
            android:layout_marginLeft="@dimen/fab_margin"
            android:gravity="right"
            android:text="@string/book_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_prices_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</LinearLayout>
