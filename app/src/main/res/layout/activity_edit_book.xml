<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="mo.ed.prof.yusor.Activities.Book.EditBookActivity">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/Edit_addBook"
            android:textColor="@color/yellow"
            android:hint="@string/add_book"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Spinner
            android:layout_margin="@dimen/top_margin"
            android:background="#000000"
            android:layout_marginLeft="3dp"
            android:id="@+id/Auth_spinner"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/isbn_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/Edit_isbnNum"
            android:textColor="@color/yellow"
            android:hint="@string/enter_ISBN"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/Faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Spinner
            android:layout_margin="@dimen/top_margin"
            android:background="#000000"
            android:layout_marginLeft="3dp"
            android:id="@+id/Faculty_spinner"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/Publish_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/Edit_PublishYear"
            android:textColor="@color/yellow"
            android:hint="@string/enter_publish_year"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:gravity="right"
            android:text="@string/enter_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/Edit_enterDescription"
            android:textColor="@color/yellow"
            android:hint="@string/hint_enter_description"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="@string/Book_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Spinner
            android:layout_margin="@dimen/top_margin"
            android:background="#000000"
            android:layout_marginLeft="3dp"
            android:id="@+id/BookStatus_spinner"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="@string/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Spinner
            android:layout_margin="@dimen/top_margin"
            android:background="#000000"
            android:layout_marginLeft="3dp"
            android:id="@+id/Purpose_spinner"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Edit_BookPrice"
            android:textColor="@color/yellow"
            android:hint="@string/book_price"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"  />
        <TextView
            android:layout_marginLeft="@dimen/fab_margin"
            android:gravity="right"
            android:text="@string/book_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/button_margin"
                android:id="@+id/BookImage"
                android:layout_width="120dp"
                android:layout_height="160dp"
                />
            <ImageView
                android:layout_margin="@dimen/button_margin"
                android:id="@+id/camera"
                android:src="@drawable/camera_logo"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:gravity="center_vertical|right"
            android:text="@string/Attach_Photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.dd.processbutton.iml.GenerateProcessButton
            android:id="@+id/Edit_BTN"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_edit"
            android:textColor="@color/white"
            custom:pb_colorComplete="@color/yellow"
            custom:pb_colorNormal="@color/red_pressed"
            custom:pb_colorPressed="@color/red"
            custom:pb_colorProgress="@color/grey"
            android:textSize="18sp"
            custom:pb_textComplete="@string/done"
            custom:pb_textProgress="@string/uploading" />
    </LinearLayout>
</LinearLayout>
</ScrollView>