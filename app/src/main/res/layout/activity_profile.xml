<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:autoMirrored="true"
    android:id="@+id/coordinator_layout_detail">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/AppBarLayout_height"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/background"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/appbar_elevation">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collabsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Overlap_top"
            app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginleft"
            app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginright"
            app:layout_scrollFlags="scroll|enterAlways">
            <ImageView
                android:id="@+id/Article_MainImage"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:scaleType = "centerCrop"
                android:layout_height="@dimen/AppBarLayout_height"
                android:layout_gravity="center_vertical|center_horizontal" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:navigationIcon="@drawable/ic_back_arrow_red"
                android:layout_marginStart="@dimen/list_toolbar_side_margin"
                android:layout_marginLeft="@dimen/list_toolbar_side_margin"
                android:layout_marginRight="@dimen/list_toolbar_side_margin"
                android:layout_marginEnd="@dimen/list_toolbar_side_margin"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:padding="@dimen/padding_authentication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_profile_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/padding_authentication"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="@color/red"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="@dimen/padding_authentication"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/profile_name"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/padding_authentication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/padding_authentication"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="@color/red"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="@dimen/padding_authentication"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/gender"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:padding="@dimen/padding_authentication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/padding_authentication"
                        android:gravity="center_vertical|left"
                        android:text="@string/static_price"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/email_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/padding_authentication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_major"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/padding_authentication"
                        android:gravity="center_vertical|left"
                        android:text="@string/static_price"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/graduation_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>