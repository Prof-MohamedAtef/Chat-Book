<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    tools:context="mo.ed.prof.yusor.Activities.AddBookActivity">
    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/yellow"
                android:textSize="@dimen/header_text_size"
                android:text="@string/add_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/book_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="2"
                android:id="@+id/edit_book_name"
                android:hint="@string/hint_book_name"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:padding="@dimen/text_padding"
                android:lines="1"
                android:minLines="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/author_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="2"
                android:id="@+id/edit_author_name"
                android:hint="@string/hint_author_name"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:padding="@dimen/text_padding"
                android:lines="1"
                android:minLines="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/isbn_number"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="2"
                android:id="@+id/edit_isbn"
                android:hint="@string/hint_isbn_number"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:padding="@dimen/text_padding"
                android:lines="1"
                android:minLines="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Faculty"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:padding="@dimen/text_padding"
                android:background="@color/grey"
                android:id="@+id/faculties_spinner"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Book_status"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <RadioGroup
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/radioBookStatusGroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/Radio_new"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_new"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/Radio_intermediate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Intermediate"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/Radio_notbad"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/not_bad"
                    android:checked="true" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Publish_year"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="2"
                android:id="@+id/edit_publish_year_picker"
                android:hint="@string/hint_Publish_year"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:padding="@dimen/text_padding"
                android:lines="1"
                android:minLines="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/transaction_type"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <RadioGroup
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/radioTransactionGroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/Radio_Sale"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sale"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/Radio_exchange"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/exchange"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/Radio_gift"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gift"
                    android:checked="true" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Attach_Photo"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/camera"
                    android:src="@drawable/camera_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_margin="@dimen/fab_margin"
                    android:id="@+id/BookImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/checkPrices"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="2"
                android:id="@+id/edit_checkPrice"
                android:hint="@string/hint_checkPrices"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:padding="@dimen/text_padding"
                android:lines="1"
                android:minLines="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
            <TextView
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical|center_horizontal"
                android:text="10 SR"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/fragment_prices_suggestions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
</LinearLayout>
</ScrollView>