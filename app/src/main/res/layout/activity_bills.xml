<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
    android:background="@color/white"
android:autoMirrored="true"
android:id="@+id/coordinator_layout_detail">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/AppBarLayout_height"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/background"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:elevation="@dimen/appbar_elevation">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collabsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Overlap_top"
        app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginleft"
        app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginright"
        app:layout_scrollFlags="scroll|enterAlways">
        <ImageView
            android:id="@+id/Article_MainImage"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:scaleType = "centerCrop"
            android:layout_height="@dimen/AppBarLayout_height"
            android:layout_gravity="center_vertical|center_horizontal" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginStart="@dimen/list_toolbar_side_margin"
            android:layout_marginLeft="@dimen/list_toolbar_side_margin"
            app:navigationIcon="@drawable/ic_back_arrow_red"
            android:layout_marginRight="@dimen/list_toolbar_side_margin"
            android:layout_marginEnd="@dimen/list_toolbar_side_margin"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_overlapTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context="mo.ed.prof.yusor.Activities.BillApprove.BillsActivity">
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_authentication">
                <TextView
                    android:gravity="start|center_vertical"
                    android:text="@string/select_buyer_ifexist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/chat_spinner"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:gravity="start|center_vertical"
                    android:text="@string/seller_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txt_seller_name"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:gravity="start|center_vertical"
                    android:text="@string/date_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txt_date_time"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:gravity="start|center_vertical"
                    android:text="@string/book_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txt_book_name"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:gravity="start|center_vertical"
                    android:text="@string/book_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txt_price"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="20"
                    android:layout_height="match_parent"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="SR"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/agreement"/>
            <com.dd.processbutton.iml.GenerateProcessButton
                android:id="@+id/create_bill"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/add_to_bills"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                custom:pb_colorComplete="@color/yellow"
                custom:pb_colorNormal="@color/red_pressed"
                custom:pb_colorPressed="@color/red"
                custom:pb_colorProgress="@color/grey"
                android:textSize="18sp"
                custom:pb_textComplete="@string/done"
                custom:pb_textProgress="@string/uploading" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>