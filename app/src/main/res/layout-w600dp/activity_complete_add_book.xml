<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:autoMirrored="true"
    android:id="@+id/mTwoPane">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/AppBarLayout_height"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/background"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/appbar_elevation">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collabsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Overlap_top"
            app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginleft"
            app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginright"
            app:layout_scrollFlags="scroll|enterAlways">
            <ImageView
                android:id="@+id/Article_MainImage"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:scaleType = "centerCrop"
                android:layout_height="@dimen/AppBarLayout_height"
                android:layout_gravity="center_vertical|center_horizontal" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:navigationIcon="@drawable/arrow_back_en"
                android:layout_marginStart="@dimen/list_toolbar_side_margin"
                android:layout_marginLeft="@dimen/list_toolbar_side_margin"
                android:layout_marginRight="@dimen/list_toolbar_side_margin"
                android:layout_marginEnd="@dimen/list_toolbar_side_margin"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_authentication"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            tools:context="mo.ed.prof.yusor.Activities.Book.CompleteAddBookActivity">

            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/Book_spinner"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:text="@string/Book_status"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:gravity="start|center_vertical"
                    android:id="@+id/radioBookStatusGroup"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/Radio_new"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_new"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/Radio_intermediate"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Intermediate"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/Radio_notbad"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/not_bad"
                        android:checked="true" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:text="@string/purpose"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:gravity="start|center_vertical"
                    android:id="@+id/radioTransactionGroup"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/Radio_Sale"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sale"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/Radio_exchange"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/exchange"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/Radio_gift"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="@string/gift"
                        android:checked="true" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:text="@string/book_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/Edit_BookPrice"
                    android:textColor="@color/white"
                    android:hint="@string/price"
                    android:textColorHint="@color/black"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.dd.processbutton.iml.GenerateProcessButton
                    android:id="@+id/Publish_BTN"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/btn_publish"
                    android:textColor="@color/white"
                    custom:pb_colorComplete="@color/white_grey"
                    custom:pb_colorNormal="@color/blue"
                    custom:pb_colorPressed="@color/blue"
                    custom:pb_colorProgress="@color/grey"
                    android:textSize="18sp"
                    custom:pb_textComplete="@string/done"
                    custom:pb_textProgress="@string/uploading" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_vertical"
                android:layout_marginBottom="@dimen/top_margin">
                <TextView
                    android:gravity="start|center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size"
                    android:text="@string/similar_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--<FrameLayout-->
            <!--android:layout_gravity="center"-->
            <!--android:id="@+id/frame_prices_suggestions"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--</FrameLayout>-->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>