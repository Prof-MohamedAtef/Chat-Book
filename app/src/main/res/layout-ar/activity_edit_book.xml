<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:autoMirrored="true"
    android:id="@+id/coordinator_layout_detail">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/AppBarLayout_height"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/background"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/appbar_elevation">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collabsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Overlap_top"
            app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginleft"
            app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginright"
            app:layout_scrollFlags="scroll|enterAlways">
            <ImageView
                android:id="@+id/Article_MainImage"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:scaleType = "centerCrop"
                android:layout_height="@dimen/AppBarLayout_height"
                android:layout_gravity="center_vertical|center_horizontal" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_marginStart="@dimen/list_toolbar_side_margin"
                android:layout_marginLeft="@dimen/list_toolbar_side_margin"
                android:layout_marginRight="@dimen/list_toolbar_side_margin"
                android:layout_marginEnd="@dimen/list_toolbar_side_margin"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/arrow_back_ar"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            tools:context="mo.ed.prof.yusor.Activities.Book.EditBookActivity">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:text="@string/book_name"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/Edit_addBook"
                    android:textColor="@color/blue"
                    android:hint="@string/add_book"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:text="@string/author_name"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/Auth_spinner"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="@string/isbn_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/Edit_isbnNum"
                    android:textColor="@color/blue"
                    android:hint="@string/enter_ISBN"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:text="@string/Faculty"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/Faculty_spinner"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:text="@string/Publish_year"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/Edit_PublishYear"
                    android:textColor="@color/blue"
                    android:hint="@string/enter_publish_year"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:gravity="right"
                    android:text="@string/enter_description"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/Edit_enterDescription"
                    android:textColor="@color/blue"
                    android:hint="@string/hint_enter_description"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:text="@string/Book_status"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/BookStatus_spinner"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:text="@string/purpose"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Spinner
                    android:layout_margin="@dimen/top_margin"
                    android:background="#000000"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/Purpose_spinner"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="@string/book_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/Edit_BookPrice"
                    android:textColor="@color/blue"
                    android:hint="@string/book_price"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"  />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:gravity="center_vertical|right"
                    android:text="@string/Attach_Photo"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="@dimen/button_margin"
                        android:id="@+id/camera"
                        android:src="@drawable/camera_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:layout_margin="@dimen/button_margin"
                        android:id="@+id/BookImage"
                        android:layout_width="120dp"
                        android:layout_height="160dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.dd.processbutton.iml.GenerateProcessButton
                    android:id="@+id/Edit_BTN"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/btn_edit"
                    android:textColor="@color/white"
                    custom:pb_colorComplete="@color/blue"
                    custom:pb_colorNormal="@color/blue"
                    custom:pb_colorPressed="@color/white_grey"
                    custom:pb_colorProgress="@color/grey"
                    android:textSize="18sp"
                    custom:pb_textComplete="@string/done"
                    custom:pb_textProgress="@string/uploading" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>