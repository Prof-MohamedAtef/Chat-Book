<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:autoMirrored="true"
    android:id="@+id/coordinator_layout_detail">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/AppBarLayout_height"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/background"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/appbar_elevation">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collabsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Overlap_top"
            app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginleft"
            app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginright"
            app:layout_scrollFlags="scroll|enterAlways">
            <ImageView
                android:id="@+id/Article_MainImage"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:scaleType = "centerCrop"
                android:layout_height="@dimen/AppBarLayout_height"
                android:layout_gravity="center_vertical|center_horizontal" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:navigationIcon="@drawable/arrow_back_ar"
                android:layout_marginStart="@dimen/list_toolbar_side_margin"
                android:layout_marginLeft="@dimen/list_toolbar_side_margin"
                android:layout_marginRight="@dimen/list_toolbar_side_margin"
                android:layout_marginEnd="@dimen/list_toolbar_side_margin"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            tools:context="mo.ed.prof.yusor.Activities.BillApprove.BookDetailActivity">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="start"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/book_name_"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/book_name_"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/book_name"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/author_name"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/author_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/author_name"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Publish_year"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/publish_year"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Publish_year_"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@drawable/black_stroke"
                        android:id="@+id/book_photo"
                        android:layout_width="140dp"
                        android:layout_height="210dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/isbn_number"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/num_isbn"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/isbn_number_"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/description_"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/desc"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/description_"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/price"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/price"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/in_sr"
                    android:src="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:gravity="start"
                android:layout_weight="4"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view_line1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/num_isbn"
                    android:layout_width="match_parent"
                    android:background="@color/red"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/available_"
                        android:layout_below="@+id/view_line1"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/available_in_store"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/available_"
                        android:layout_below="@+id/view_line1"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Book_status_"
                        android:layout_below="@+id/available_in_store"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/book_status"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Book_status_"
                        android:layout_below="@+id/available_in_store"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/offered_for_"
                        android:layout_below="@id/book_status"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/transaction_type"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/offered_for_"
                        android:layout_below="@id/book_status"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:id="@+id/view_line2"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/transaction_type"
                    android:layout_width="match_parent"
                    android:background="@color/red"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Seller_name"
                        android:layout_below="@id/view_line2"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/seller_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Seller_name"
                        android:layout_below="@id/view_line2"
                        android:src="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/email_"
                        android:layout_below="@+id/seller_name"
                        android:src="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:gravity="end"
                            android:id="@+id/seller_email"
                            android:textSize="@dimen/text_size"
                            android:text="@string/email_"
                            android:layout_below="@+id/seller_name"
                            android:src="@color/grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/gender_"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/seller_email"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/seller_gender"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/gender_"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/seller_email"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Faculty_"
                        android:layout_below="@+id/seller_gender"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/seller_faculty"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/Faculty_"
                        android:layout_below="@+id/seller_gender"
                        android:src="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <com.dd.processbutton.iml.GenerateProcessButton
                android:id="@+id/create_bill"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:textColor="@color/white"
                custom:pb_colorComplete="@color/yellow"
                android:visibility="gone"
                custom:pb_colorNormal="@color/red_pressed"
                custom:pb_colorPressed="@color/red"
                custom:pb_colorProgress="@color/grey"
                android:textSize="18sp"
                custom:pb_textComplete="@string/done"
                custom:pb_textProgress="@string/approving" />
            <Button
                android:id="@+id/start_chat_btn"
                android:text="@string/chat"
                android:visibility="gone"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

