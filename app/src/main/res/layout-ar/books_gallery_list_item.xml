<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="1dp"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="300dp"
        android:background="@drawable/white_stroke"
        android:padding="@dimen/activity_vertical_margin"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <TextView
                        android:padding="@dimen/fab_elevation"
                        android:id="@+id/book_name"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:text="@string/book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blue"
                            android:text="@string/author_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:id="@+id/author_name"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blue"
                            android:text="@string/author_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blue"
                            android:text="@string/book_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:id="@+id/book_price"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blue"
                            android:text="@string/book_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blue"
                            android:text="@string/book_availability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:padding="@dimen/fab_elevation"
                            android:id="@+id/book_availability"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:text="@string/book_availability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:elevation="3dp"
                        android:id="@+id/start_chat_btn"
                        android:text="@string/chat"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/button_margin"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/details_btn"
                        android:layout_margin="@dimen/button_margin"
                        android:layout_weight="1"
                        android:text="@string/details"
                        android:textStyle="bold"
                        android:elevation="3dp"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/black_stroke"
                    android:id="@+id/book_image"
                    android:scaleType="fitXY"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>